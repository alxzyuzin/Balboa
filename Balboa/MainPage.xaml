        <!-- Главное меню -->
        <Grid x:Name="grid_MainMenu" Width="200"   
              HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="20,0,0,0" Background="{StaticResource MainBackgroundBrush}">

            <Grid.Resources>
                <Storyboard x:Name="MainMenuShowStoryboard">
                    <DoubleAnimation   Storyboard.TargetName="stp_MainMenu_Landscape"
                                        Storyboard.TargetProperty="Opacity"
                                         From="0.0" To="1.0" Duration="00:00:0.2">

                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="MainMenuHideStoryboard">
                    <DoubleAnimation Storyboard.TargetName="stp_MainMenu_Landscape"
                                        Storyboard.TargetProperty="Opacity"
                                         From="1.0" To="0.0" Duration="00:00:0.2" 
                                          FillBehavior="HoldEnd">

                    </DoubleAnimation>
                </Storyboard>

            </Grid.Resources>

            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <EdgeUIThemeTransition Edge="Left"/>
                </TransitionCollection>
            </Grid.ChildrenTransitions>

            <StackPanel x:Name="stp_MainMenu" VerticalAlignment="Stretch" Margin="0,20,0,0">
                <StackPanel.RenderTransform>
                    <TranslateTransform />
                </StackPanel.RenderTransform>

                <Button x:Name="btn_CurrentTrack" Content="Current track"    Style="{StaticResource MainMenuItemStyle}" Tapped="btn_CurrentTrack_Tapped"/>
                <Button x:Name="btn_Playlist"     Content="Current playlist" Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Playlist_Tapped"/>
                <Button x:Name="btn_FileSystem"   Content="File system"      Style="{StaticResource MainMenuItemStyle}" Tapped="btn_FileSystem_Tapped"/>
                <Button x:Name="btn_SavedPlayLists" Content="Saved playlists"        Style="{StaticResource MainMenuItemStyle}" Tapped="btn_SavedPlayLists_Tapped" />
                <Button x:Name="btn_Artists"      Content="Artists"          Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Artists_Tapped"/>
                <Button x:Name="btn_Genres"       Content="Genres"           Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Genres_Tapped"/>
                <Button x:Name="btn_Search"       Content="Search"           Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Search_Tapped"/>
                <Button x:Name="btn_Stats"        Content="Statistic"        Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Stats_Tapped"/>
                <Button x:Name="btn_Settings"     Content="Settings"         Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Settings_Tapped"/>
                <TextBlock                        Height="20"/>

                <ToggleSwitch x:Name="ts_Random"  Header="Random"  IsOn="{Binding Random}"  Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Random_Toggled"/>
                <ToggleSwitch x:Name="ts_Repeat"  Header="Repeat"  IsOn="{Binding Repeat}"  Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Repeat_Toggled"/>
                <ToggleSwitch x:Name="ts_Consume" Header="Consume" IsOn="{Binding Consume}" Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Consume_Toggled"/>
            </StackPanel>

        </Grid>
        <local:MessageBox x:Name="MsgBox" Visibility="Collapsed"/>
        <Popup x:Name="popup_MainMenu" HorizontalOffset="0" VerticalOffset="70">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <!-- Окно выезжает из заданной границы элемента управления-->
                    <PaneThemeTransition Edge="Top"/>
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderThickness="1" BorderBrush="LightGray">
                <Grid Width="200"   HorizontalAlignment="Left"  VerticalAlignment="Top" Background="{StaticResource MainBackgroundBrush}" d:IsHidden="True">
                    <StackPanel VerticalAlignment="Stretch">
                        <TextBlock                        Height="30"/>
                        <Button x:Name="btn_CurrentTrack_popup" Content="Current track"    Style="{StaticResource MainMenuItemStyle}" Tapped="btn_CurrentTrack_Tapped"/>
                        <Button x:Name="btn_Playlist_popup"     Content="Current playlist" Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Playlist_Tapped"/>
                        <Button x:Name="btn_FileSystem_popup"   Content="File system"      Style="{StaticResource MainMenuItemStyle}" Tapped="btn_FileSystem_Tapped"/>
                        <Button x:Name="btn_PlayLists_popup"    Content="Playlists"        Style="{StaticResource MainMenuItemStyle}" Tapped="btn_SavedPlayLists_Tapped" /> 
                        <Button x:Name="btn_Artists_popup"      Content="Artists"          Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Artists_Tapped"/>
                        <Button x:Name="btn_Genres_popup"       Content="Genres"           Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Genres_Tapped"/>
                        <Button x:Name="btn_Search_popup"       Content="Search"           Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Search_Tapped"/>
                        <Button x:Name="btn_Stats_popup"        Content="Statistic"        Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Stats_Tapped"/>
                        <Button x:Name="btn_Settings_popup"     Content="Settings"         Style="{StaticResource MainMenuItemStyle}" Tapped="btn_Settings_Tapped"/>
                        <TextBlock                        Height="20"/>

                        <ToggleSwitch x:Name="ts_Random_popup"  Header="Random"  IsOn="{Binding Random}"  Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Random_Toggled"/>
                        <ToggleSwitch x:Name="ts_Repeat_popup"  Header="Repeat"  IsOn="{Binding Repeat}"  Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Repeat_Toggled"/>
                        <ToggleSwitch x:Name="ts_Consume_popup" Header="Consume" IsOn="{Binding Consume}" Style="{StaticResource ToggleSwitchStyle}"  Toggled="ts_Consume_Toggled"/>
                    </StackPanel>

                </Grid>

            </Border>
        </Popup>


