<Page
    x:Name="pageRoot"
    x:Class="Balboa.MainPage"
    DataContext="{Binding Server, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Balboa"
    xmlns:common="using:Balboa.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">




    <Page.Resources>
    
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Balboa</x:String>
<!--
        <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FF303030" />
        <SolidColorBrush x:Key="InformationPanelBackgroundBrush" Color="#FF404040" />
-->
        <!-- Определение класса TimeConverter в виде статического ресурса для подключения к TexstBlock  Converter={StaticResource Converter1}-->
        <common:TimeConverter  x:Key="TimeConverter"/>
        <common:PlaylistItemStyleSelector x:Key="PlaylistItemStyleSelector"/>
        <!-- common:FileItemStyleSelector x:Key="FileItemStyleSelector" / -->

        <!-- ШАБЛОН для представления элемента SAVED PLAYLIST -->
        <DataTemplate x:Key="SavedPlaylistItemTemplate">
            <Grid x:Name="gr_FileSystemItemTemplate" Margin="20,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <TextBlock  Grid.Column="0"  Text="{Binding Icon}"  FontFamily="Segoe UI Symbol" FontSize="30"  />
                <TextBlock  Grid.Column="1"  Text="{Binding Name}"  TextWrapping="WrapWholeWords" FontFamily="Segoe UI Symbol" FontSize="22" VerticalAlignment="Top" />
                <TextBlock  Grid.Column="2" />
            </Grid>
        </DataTemplate>

        <!-- ОБЩИЙ ШАБЛОН для представления элемента списка-->
        <DataTemplate x:Key="CommonListItemTemplate">
            <Grid Height="35" Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="22" Text="{Binding Name}"  FontFamily="Segoe UI Symbol"/>
            </Grid>
        </DataTemplate>

        <!-- ОБЩИЙ ШАБЛОН для представления трека в списке-->
        <DataTemplate x:Key="TrackListItemTemplate">
            <Grid Height="35" Margin="3,5,0,5" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="22" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Text="{Binding TrackNo}"  FontFamily="Segoe UI Symbol" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                <TextBlock FontSize="22" Grid.Row="0" Grid.Column="1" Text="{Binding Title}"  FontFamily="Segoe UI Symbol"/>
            </Grid>
        </DataTemplate>

        <!-- ШАБЛОН для элемента Playlist-->
        <DataTemplate x:Key="PlaylistItemTemplate">
            <Grid x:Name="gr_PlaylistItemTemplate" Margin="0,5,0,5">

                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition  Height="20"/>
                    <!--RowDefinition  Height="20"/-->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}"  FontSize="20" Margin="10,0,0,0" Grid.ColumnSpan="2" />
                <StackPanel  Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Artist :"   Margin="15,0,0,0"/>
                    <TextBlock Text="{Binding Artist}" Margin="5,0,0,0"/>
                    <TextBlock Text="Album : " Margin="15,0,0,0"/>
                    <TextBlock Text="{Binding Album}"  Margin="5,0,0,0"/>
                    <TextBlock Text="Year : "  Margin="15,0,0,0"/>
                    <TextBlock Text="{Binding Date}"  Margin="5,0,0,0"/>
                </StackPanel>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Time , Converter={StaticResource TimeConverter}}" FontSize="20" Margin="0,0,20,0" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="File :" FontSize="15"  Margin="30,0,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding File}" FontSize="15" Margin="60,0,0,0" Grid.ColumnSpan="2"/>

            </Grid>
        </DataTemplate>


        <Style  x:Key="MainMenuItemStyle" TargetType ="Button" >
            <!-- Setter Property="Width" Value="220"/ -->
            <Setter Property="Height" Value="45" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Content" Value=""/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="LibraryMenuItemStyle" TargetType="Button">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="60" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Name="ToggleSwitchStyle" TargetType="ToggleSwitch">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="OffContent" Value="Off"/>
            <Setter Property="OnContent" Value="On"/>
            <Setter Property="FontSize" Value="18"/>

        </Style>

        <Style x:Key="InformationGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,100,0,20"/>
            <Setter Property="Background" Value="{StaticResource MainBackgroundBrush}"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <Style x:Key="GridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Margin" Value="0,0,2,2" />
            <Setter Property="Background" Value="#10F0F0F0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="60" />
        </Style>

        <Style x:Key="CurrentTrackTextBlockStyle" TargetType="TextBlock" >
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="0,5,5,5" />
        </Style>

        <Style x:Key="StatisticTextBlockStyle" TargetType="TextBlock" >
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,10,10,5" />
        </Style>

        <Style x:Key="StatisticLabelsTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource StatisticTextBlockStyle}">
            <Setter Property="TextAlignment" Value="Right" />
        </Style>

        <Style x:Key="StatisticDataTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource StatisticTextBlockStyle}">
            <Setter Property="TextAlignment" Value="Left" />
        </Style>

    </Page.Resources>
    <Page.Background>
        <StaticResource ResourceKey="ListViewItemSelectedBackgroundThemeBrush"/>
    </Page.Background>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="grid_Main"  Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
       
        
        <!--  PЗАГОЛОВОК ОКНА-->
        <StackPanel x:Name="stackpanel_PageHeader" Orientation="Horizontal"  Height="70" Margin="20,0,20,0" VerticalAlignment="Top" Visibility="Collapsed">
            <TextBlock x:Name="textblock_MainMenu" Text="&#xE14C;"  FontSize="50" FontFamily="Segoe UI Symbol"  Tapped="textblock_MainMenu_Tapped" />
            <TextBlock x:Name="textbox_CurrentMode" x:Uid="cp" Text="" FontSize="25" FontWeight="ExtraLight" VerticalAlignment="Top" Margin="70,10,0,0"/>
        </StackPanel>

        <!-- Главное окно-->
        <Grid x:Name="grid_MainPanel" Margin="220,20,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <local:PageHeader x:Name="p_PageHeader"  Grid.Row="0" Visibility="Visible"/>
            
             <!--   CURRENT TRACK
         -->
            <Grid  x:Name="gr_CurrentTrack" Grid.Row="1" Style="{StaticResource InformationGridStyle}" Visibility="Visible" Margin="0,0,0,10" d:IsHidden="True">

                <Grid.Resources>
                    <Storyboard x:Name="gr_CurrentTrackShowStoryboard">
                        <!--
                        <DoubleAnimation Storyboard.TargetName="image_AlbumCover"
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         From="-600" To="0" Duration="00:00:3" 
                                          FillBehavior="HoldEnd"
                                         AutoReverse="True">
                            <DoubleAnimation.EasingFunction>
                                <BounceEase Bounces="4" EasingMode="EaseOut" Bounciness="1.8" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
-->
                        <DoubleAnimation  Storyboard.TargetName="gr_CurrentTrack"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                 </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="image_AlbumCover" Grid.Row="0" Grid.Column="0" Margin="40" Grid.RowSpan="2">
                    <Image.RenderTransform>
                        <TranslateTransform />
                    </Image.RenderTransform>
                </Image>
                <TextBlock x:Name="textblock_Title" Text="{Binding Title}"    Grid.Row="0"   Grid.ColumnSpan="3"  
                       Style="{StaticResource  CurrentTrackTextBlockStyle}"  FontSize="35" Margin="0,30,10,0" 
                           Height="90" TextWrapping="WrapWholeWords" Grid.RowSpan="2" Grid.Column="1" 
                           VerticalAlignment="Top" />
                <Grid x:Name="grid_CurrentTrackData" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="40,120,0,0" d:IsHidden="True" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                     </Grid.ColumnDefinitions>
                 <StackPanel Grid.Column="0"  Grid.Row="0" >
                    <!--TextBlock Text="Title :"           Style="{StaticResource CurrentTrackTextBlockStyle}"/-->
                    <TextBlock Text="Artist :"          Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Album :"           Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Date :"            Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Album artist :"    Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Composer :"        Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Disc :"            Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Track :"           Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Duration :"        Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="Genre :"           Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="File :"            Style="{StaticResource CurrentTrackTextBlockStyle}"/>
                    <!--TextBlock Text="Last-Modified :"   Style="{StaticResource CurrentTrackTextBlockStyle}"/-->
                </StackPanel>
                <StackPanel Grid.Column="1"  Grid.Row="0" d:IsHidden="True">
                    <!--TextBlock Text="{Binding Title}"        Style="{StaticResource  CurrentTrackTextBlockStyle}"  /-->
                    <TextBlock Text="{Binding Artist}"       Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Album}"        Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Date}"         Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding AlbumArtist}"  Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Composer}"     Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Disc}"         Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Track}"        Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding Duration , Converter={StaticResource TimeConverter}}"     Style="{StaticResource  CurrentTrackTextBlockStyle}" />
                    <TextBlock Text="{Binding Genre}"        Style="{StaticResource  CurrentTrackTextBlockStyle}"/>
                    <TextBlock Text="{Binding File}"         Style="{StaticResource  CurrentTrackTextBlockStyle}" Height="60" TextWrapping="WrapWholeWords"/>
                    <!--TextBlock Text="{Binding LastModified}" Style="{StaticResource  CurrentTrackTextBlockStyle}"/-->
                </StackPanel>
                </Grid>
            </Grid>

            <!--   CURRENT PLAYLIST -->
            <local:CurrentPlaylist x:Name="p_CurrentPlaylist" Grid.Row="1" Visibility="Collapsed" />
            
            <!--  FILE SYSTEM  -->
            <local:TrackDirectory x:Name="p_TrackDirectory" Grid.Row="1" Visibility="Collapsed" d:IsHidden="True" />
            <!--  SAVED PLAYLISTS
        -->
            <Grid  x:Name="gr_SavedPlayLists" Grid.Row="1" Style="{StaticResource InformationGridStyle}" d:IsHidden="True">
                <Grid.Resources>
                    <Storyboard x:Name="gr_SavedPlayListsShowStoryboard">
                        <DoubleAnimation  Storyboard.TargetName="gr_SavedPlayLists"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="87"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GridView x:Name="gr_SavedPlaylistsContent" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      SelectionMode="Single" 
                      ItemTemplate="{StaticResource SavedPlaylistItemTemplate}" 
                      ItemContainerStyle="{StaticResource GridViewItemStyle}"/>
                <StackPanel  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  
                         Margin="5,0,5,5" Background="{StaticResource MainBackgroundBrush}"/>
                <StackPanel  Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarButton x:Name="appbtn_SavedPlaylistLoad" Icon="OpenFile" Label="Load" Click="appbtn_SavedPlaylistLoad_Click" />
                    <AppBarButton x:Name="appbtn_SavedPlaylistDelete" Icon="Delete" Label="Delete" Tapped="appbtn_SavedPlaylistDelete_Tapped"/>
                    <AppBarButton x:Name="appbtn_SavedPlaylistRename" Icon="Rename" Label="Rename" Tapped="appbtn_SavedPlaylistRename_Tapped"/>
                </StackPanel>

            </Grid>

            <!--  GENRE
        -->
            <Grid  x:Name="gr_Genres" Grid.Row="1"  Style="{StaticResource InformationGridStyle}" Visibility="Visible" d:IsHidden="True">
                <Grid.Resources>
                    <Storyboard x:Name="gr_GenresShowStoryboard">
                        <DoubleAnimation  Storyboard.TargetName="gr_Genres"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="87"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"  BorderBrush="{StaticResource MainBackgroundBrush}" BorderThickness="4" Margin="0,-4,0,-4"/>
                <TextBlock Text="Genres" Grid.Row="0" Grid.Column="0" FontSize="22" Foreground="Orange" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
                <TextBlock Text="Artists" Grid.Row="0" Grid.Column="1" FontSize="22" Foreground="Orange" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock Text="Artist albums" Grid.Row="1" Grid.Column="1" FontSize="22" Foreground="Orange" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="15"/>
                <TextBlock Text="Album tracks" Grid.Row="0" Grid.Column="2" FontSize="22" Foreground="Orange" HorizontalAlignment="Center"  VerticalAlignment="Top"/>

                <common:ListViewExtended x:Name="listview_Genres"  Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Stretch"  
                                     Margin="10,35,0,0"                                       
                                     ItemBackground="#10F0F0F0"      
                                     ItemTemplate="{StaticResource CommonListItemTemplate}" 
                                     SelectionMode="Single"
                                     Grid.RowSpan="2"
                                     Tapped="listview_Genres_Tapped"/>
                <common:ListViewExtended x:Name="listview_GenreArists"  Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Stretch"  
                                     Margin="10,35,0,0"
                                          ItemBackground="#10F0F0F0" 
                                          ItemTemplate="{StaticResource CommonListItemTemplate}" 
                                          SelectionMode="Single"
                                    
                                          Tapped="listview_Arists_Tapped"/>

                <common:ListViewExtended x:Name="listview_GenreAlbums"  Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Stretch"  
                                     Margin="10,50,0,0"
                                     ItemBackground="#10F0F0F0"      
                                     ItemTemplate="{StaticResource CommonListItemTemplate}" 
                                          SelectionMode="Single"
                                          Tapped="listview_Albums_Tapped"/>

                <common:ListViewExtended x:Name="listview_GenreTracks"  Grid.Row="0" Grid.Column="2" VerticalContentAlignment="Stretch"  
                                    Margin="10,35,0,0"
                                     ItemBackground="#10F0F0F0"      
                                     ItemTemplate="{StaticResource TrackListItemTemplate}" 
                                     SelectionMode="Multiple" Grid.RowSpan="2"/>

                <StackPanel  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left"  
                         Margin="5,0,5,5" Background="{StaticResource MainBackgroundBrush}"/>
                <StackPanel  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="5,0,5,5"
                         Background="{StaticResource MainBackgroundBrush}">
                    <TextBlock x:Name="textblock_GenreSearch"  Text="Scroll to genre" 
                           FontSize="22" Margin="20,0,20,0" Height="30" HorizontalAlignment="Left" />
                    <TextBox x:Name="textbox_GenreSearch"  Text="Genre name"
                           FontSize="20"   Height="40" Width="140" HorizontalAlignment="Left" 
                           GotFocus="textbox_GenreSearch_GotFocus" 
                           LostFocus="textbox_GenreSearch_LostFocus"
                           TextChanged="textbox_GenreSearch_TextChanged"/>
                </StackPanel>
                <StackPanel  Grid.Row="2" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarButton x:Name="appbtn_Genre_AddToPaylist" Icon="Add"   Label="Add to playlist" Tapped="appbtn_Genre_AddToPaylist_Tapped"/>
                </StackPanel>
            </Grid>

            <!--  ARTISTS
        -->
            <Grid  x:Name="gr_Artists" Grid.Row="1" Style="{StaticResource InformationGridStyle}"  Visibility="Visible" d:IsHidden="True">
                <Grid.Resources>
                    <Storyboard x:Name="gr_ArtistsShowStoryboard">
                        <DoubleAnimation  Storyboard.TargetName="gr_Artists"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="87"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"  BorderBrush="{StaticResource MainBackgroundBrush}" BorderThickness="4" Margin="0,-4,0,-4"/>
                <TextBlock Text="Artists" Grid.Row="0" Grid.Column="0" FontSize="22" Foreground="Orange" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Artist albums" Grid.Row="0" Grid.Column="1" FontSize="22" Foreground="Orange" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                <TextBlock Text="Album tracks" Grid.Row="0" Grid.Column="2" FontSize="22" Foreground="Orange" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                <common:ListViewExtended x:Name="listview_Arists"  Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Stretch"  
                                     Margin="10,0,0,0"
                                          ItemBackground="#10F0F0F0" 
                                          ItemTemplate="{StaticResource CommonListItemTemplate}" 
                                          SelectionMode="Single"
                                          Tapped="listview_Arists_Tapped"/>

                <common:ListViewExtended x:Name="listview_Albums"  Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Stretch"  
                                     Margin="10,0,0,0"
                                     ItemBackground="#10F0F0F0"      
                                     ItemTemplate="{StaticResource CommonListItemTemplate}" 
                                          SelectionMode="Single"
                                          Tapped="listview_Albums_Tapped"/>

                <common:ListViewExtended x:Name="listview_Tracks"  Grid.Row="1" Grid.Column="2" VerticalContentAlignment="Stretch"  
                                     Margin="10,0,0,0" 
                                     ItemBackground="#10F0F0F0"      
                                     ItemTemplate="{StaticResource TrackListItemTemplate}" 
                                          SelectionMode="Multiple"/>

                <StackPanel  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                         Margin="5,0,5,5" Background="{StaticResource MainBackgroundBrush}"/>
                <StackPanel  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left"   
                        Orientation="Horizontal" Margin="40,5,5,5" Background="{StaticResource MainBackgroundBrush}">
                    <TextBlock x:Name="textblock_ArtistSearch"  Grid.Row="2" Grid.Column="0" Text="Scroll to artist" 
                       FontSize="22" Margin="20,0,20,0" Height="30"  />
                    <TextBox x:Name="textbox_ArtistSearch"  Grid.Row="2" Grid.Column="0" Text="Artist name"
                       FontSize="20"   Height="40" Width="200" 
                       GotFocus="textbox_ArtistSearch_GotFocus" 
                       LostFocus="textbox_ArtistSearch_LostFocus"
                       TextChanged="textbox_ArtistSearch_TextChanged"/>
                </StackPanel>


                <StackPanel  Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="3">
                    <AppBarButton x:Name="appbtn_Artist_AddToPaylist" Icon="Add"   Label="Add to playlist" Tapped="appbtn_Artist_AddToPaylist_Tapped" />
                </StackPanel>
            </Grid>


            <!--  SEARCH
        -->
            <Grid  x:Name="gr_Search" Grid.Row="1" Grid.Column="0" Style="{StaticResource InformationGridStyle}" Visibility="Visible" d:IsHidden="True">
                <Grid.Resources>
                    <Storyboard x:Name="gr_SearchShowStoryboard">
                        <DoubleAnimation  Storyboard.TargetName="gr_Search"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="87"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <common:ListViewExtended x:Name="listview_Search"  Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Stretch"  
                                          ItemBackground="#10F0F0F0" 
                                          ItemTemplate="{StaticResource PlaylistItemTemplate}" 
                                          ItemContainerStyleSelector="{StaticResource PlaylistItemStyleSelector}" 
                                          SelectionMode="Multiple"
                                          Grid.ColumnSpan="2"
                                          GotFocus="listview_Search_GotFocus"
                                          DoubleTapped="listview_Search_DoubleTapped"/>
                <TextBlock x:Name="textblock_SearchResult" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" 
                       HorizontalAlignment="Center" FontSize="25" Text="" TextWrapping="WrapWholeWords"/>
                <StackPanel  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" 
                         Margin="5,0,5,5" Background="{StaticResource MainBackgroundBrush}"  Orientation="Horizontal"  FlowDirection="LeftToRight" >
                    <TextBlock x:Name="textblock_Search"  Grid.Row="2" Grid.Column="1" Text="Search" 
                       FontSize="22" Margin="20,-15,20,0" Height="30" HorizontalAlignment="Left" />
                    <TextBox x:Name="textbox_Search"  Grid.Row="2" Grid.Column="1" Text=""
                       FontSize="20"  Margin="0,-10,0,0" Height="40" Width="150" HorizontalAlignment="Left"/>
                    <AppBarButton x:Name="appbtn_Search" Icon="Find" Tapped="appbtn_Search_Tapped" />
                </StackPanel>

                <StackPanel  Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarButton x:Name="appbtn_Search_DeSelectAll" Icon="ClearSelection" Label="Clear Selection" Tapped="appbtn_Search_DeSelectAll_Tapped"/>
                    <AppBarButton x:Name="appbtn_Search_SelectAll" Icon="SelectAll" Label="Select All" Tapped="appbtn_Search_SelectAll_Tapped"/>
                    <AppBarButton x:Name="appbtn_Search_AddToPaylist" Icon="Add"   Label="Add to playlist" Tapped="appbtn_Search_AddToPaylist_Tapped"/>
                </StackPanel>
            </Grid>

            <!--  STATS
        -->
            <Grid  x:Name="gr_Stats" Grid.Row="1" Grid.Column="0" Style="{StaticResource InformationGridStyle}" d:IsHidden="True">
                <Grid.Resources>
                    <Storyboard x:Name="gr_StatsShowStoryboard">
                        <DoubleAnimation  Storyboard.TargetName="gr_Stats"
                                          Storyboard.TargetProperty="Opacity"
                                          From="0.0" To="1.0" Duration="0:0:1"/>
                    </Storyboard>
                </Grid.Resources>

                <!-- DataContext="{Binding StatisticData, RelativeSource={RelativeSource StatisticData}}" -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,60,0,20">
                    <TextBlock Text="Number of artists :" Style="{StaticResource StatisticLabelsTextBlockStyle}"/>
                    <TextBlock Text="Number of albums :" Style="{StaticResource StatisticLabelsTextBlockStyle}"/>
                    <TextBlock Text="Number of songs :" Style="{StaticResource StatisticLabelsTextBlockStyle}" />
                    <TextBlock Text="Daemon uptime :"  Style="{StaticResource StatisticLabelsTextBlockStyle}"/>
                    <TextBlock Text="Num of all song times in the db :"  Style="{StaticResource StatisticLabelsTextBlockStyle}"/>
                    <TextBlock Text="Last db update :"  Style="{StaticResource StatisticLabelsTextBlockStyle}"/>
                    <TextBlock Text="Time length of music played:" Style="{StaticResource StatisticLabelsTextBlockStyle}" />
                </StackPanel>
                <StackPanel Grid.Column="1"  Margin="0,60,0,20">
                    <TextBlock Text="{Binding Artists}"  Style="{StaticResource  StatisticDataTextBlockStyle}"/>
                    <TextBlock Text="{Binding Albums}" Style="{StaticResource  StatisticDataTextBlockStyle}" />
                    <TextBlock Text="{Binding Songs}"  Style="{StaticResource  StatisticDataTextBlockStyle}"/>
                    <TextBlock Text="{Binding Uptime, Converter={StaticResource TimeConverter}}" Style="{StaticResource  StatisticDataTextBlockStyle}" />
                    <TextBlock Text="{Binding DbPlaytime , Converter={StaticResource TimeConverter}}"  Style="{StaticResource  StatisticDataTextBlockStyle}"/>
                    <TextBlock Text="{Binding DbUpdateDT}"  Style="{StaticResource  StatisticDataTextBlockStyle}"/>
                    <TextBlock Text="{Binding Playtime , Converter={StaticResource TimeConverter}}"  Style="{StaticResource  StatisticDataTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <!--  SETTINGS -->       
            <local:Settings x:Name="p_Settings" Grid.Row="1" d:IsHidden="True" />
             <!-- Панель управления проигрыванием -->
            <local:ControlPanel x:Name="p_ControlPanel" Grid.Row="3"/>
            
        </Grid>
        
